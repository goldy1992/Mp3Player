<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <style name="AppTheme.Blue" >
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorSecondary">@color/accent_pink</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <item name="themeName">@string/THEME_BLUE</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Orange" parent="AppTheme.Blue">
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="themeName">@string/THEME_ORANGE</item>
    </style>
</resources>