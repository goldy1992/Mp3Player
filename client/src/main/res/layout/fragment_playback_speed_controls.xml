<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/trackName"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center" >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/decreasePlaybackSpeedButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon="@drawable/ic_baseline_remove_circle_24px"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />

    <TextView
        android:background="@null"
        android:id="@+id/playbackSpeedTextView"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/default_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PLAYBACK_SPEED_DEFAULT_VALUE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/increasePlaybackSpeedButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon="@drawable/ic_baseline_add_circle_24px"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />


</LinearLayout>