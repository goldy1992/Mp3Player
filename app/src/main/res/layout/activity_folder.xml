<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <fragment
        android:id="@+id/simpleTitleBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        class="com.example.mike.mp3player.client.views.fragments.SimpleTitleBarFragment"
        tools:layout="@layout/fragment_simple_title_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/simpleTitleBarFragment"
        android:layout_above="@+id/playToolbarFragment"
        android:id="@+id/songListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/playToolbarFragment"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>