<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Base theme !-->
        <item name="textColorPrimary">?textColorPrimary</item>
        <item name="textColorSecondary">?textColorSecondary</item>
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:name">?themeName</item>
    </style>

    <style name="AppTheme.Blue" >
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/black</item>
        <item name="themeColorPrimary">@color/primary_blue</item>
        <item name="themeColorPrimaryDark">@color/dark_blue</item>
        <item name="themeColorAccent">@color/accent_pink</item>
        <item name="themeName">@string/THEME_BLUE</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Orange" >
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/black</item>
        <item name="themeColorPrimary">@color/primary_orange</item>
        <item name="themeColorPrimaryDark">@color/dark_orange</item>
        <item name="themeColorAccent">@color/accent_orange</item>
        <item name="themeName">@string/THEME_ORANGE</item>
    </style>
</resources>