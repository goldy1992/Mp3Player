<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SquareImageView">
        <attr name="useWidthOrHeight" format="enum" >
            <enum name="X" value="0"/>
            <enum name="Y" value="1" />
        </attr>
    </declare-styleable>

    <attr name="textColorPrimary" format="reference" />
    <attr name="textColorSecondary" format="reference" />
    <attr name="themeColorPrimary" format="reference"/>
    <attr name="themeColorPrimaryDark" format="reference"/>
    <attr name="themeColorAccent" format="reference"/>
    <attr name="themeName" format="reference"/>

    <array name="themes">
        <item>@style/AppTheme.Orange</item>
        <item>@style/AppTheme.Blue</item>
    </array>
</resources>